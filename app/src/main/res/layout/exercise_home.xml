<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:weightSum="100"
    tools:context=".MainActivity">

    <!-- Title box-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_weight="5"
        android:orientation="horizontal">

        <TextView
            android:layout_width="28dp"
            android:layout_height="match_parent"
            android:layout_weight="70"
            android:background="#4CAF50"
            android:gravity="center_vertical|right"
            android:text="EXERCISES"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="30dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:background="#4CAF50"
            android:scaleType="fitStart"
            android:src="@drawable/exercise" />
    </LinearLayout>

    <!-- separation box-->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:background="@android:color/white"
        android:orientation="vertical" />

    <!-- horizontal box containing buttons to access Exercise and Steps-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="30"
        android:orientation="horizontal"
        android:weightSum="100">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:background="@android:color/white" />

        <Button
            android:id="@+id/exercisemain2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="40"
            android:background="@drawable/exercisemain2"
            android:textAlignment="center" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:background="@android:color/white" />

        <Button
            android:id="@+id/stepsmain"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="40"
            android:background="@drawable/stepsmain"
            android:textAlignment="center" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:background="@android:color/white" />

    </LinearLayout>

    <!-- separation box-->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:background="@android:color/white"
        android:orientation="vertical" />

    <!--Footer section for command buttons-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="136dp"
            android:layout_weight="50"
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:weightSum="100">

            <!-- separation box-->
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:background="@android:color/white"
                android:orientation="horizontal" />

            <ImageButton
                android:id="@+id/back"
                android:layout_width="195dp"
                android:layout_height="123dp"
                android:layout_weight="80"
                android:background="@android:color/white"
                android:contentDescription="back button"
                android:scaleType="fitCenter"
                android:src="@drawable/back" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:weightSum="100">

            <!-- separation box-->
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:orientation="horizontal" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>